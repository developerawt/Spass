<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">


    <TextView
        android:id="@+id/txtDateSchoolListId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center_horizontal"
        android:text="date"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgIconSchoolListId"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_4sdp"

            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />


        <RelativeLayout
            android:id="@+id/heartLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_20sdp">

            <ImageView
                android:id="@+id/imgNormalStarSchoolListId"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_like" />

            <ImageView
                android:id="@+id/imgYellowStarSchoolListId"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_fill_liked"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/heartLayout"
            android:layout_toRightOf="@+id/imgIconSchoolListId"
            android:background="@drawable/ic_balloon_incoming_closed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_8sdp"
                android:paddingLeft="@dimen/_40sdp"
                android:paddingTop="@dimen/_4sdp">

                <TextView
                    android:id="@+id/txtSchoolNameSchoolListId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:contentDescription="action_settings"
                    android:paddingTop="0dp"
                    android:text="School 1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgChatImageSchoolListId"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_below="@+id/txtSchoolNameSchoolListId"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ic_play_button"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtVideoSizeSchoolListId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/imgChatImageSchoolListId"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginRight="10dp"
                    android:gravity="end"
                    android:text=""
                    android:textColor="@color/black_trans80"
                    android:textSize="11dp"
                    android:visibility="gone" />

                <WebView
                    android:id="@+id/wbTextContentSchoolListId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtVideoSizeSchoolListId" />

                <TextView
                    android:id="@+id/txtNewsSchoolListId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtVideoSizeSchoolListId"
                    android:ellipsize="end"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="2dp"
                    android:text="Sport Day"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wbTextContentSchoolListId"
                    android:gravity="bottom"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txtTimeSchoolListId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginRight="10dp"
                        android:gravity="end"
                        android:text="Time:05:30"
                        android:textColor="@color/black_trans80"
                        android:textSize="11dp"
                        android:visibility="visible" />


                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>